<script type="text/javascript">
  // Verifica se la variabile `user` non Ã¨ nulla
  <% if (user != null) { %>
    window.location.href = '/';  // Sostituisci '/home' con il percorso della tua home
  <% } %>
</script>

<div class="back-button">
  <form action="/">
    <button class="back-button-instance" type="submit">
      <span class="material-symbols-outlined arrow">arrow_back_ios</span>
    </button>
  </form>
</div>

<div id="card-login">
    <div id="card-content">
      <div id="card-title">
        <h2>LOGIN</h2>
        <div class="underline-title"></div>
      </div>
      <form class="form" method="post" action="/login">
        <label class="login-label" for="user-email" style="padding-top:13px">Codice Censimento</label>
        <input id="user-email" class="form-content" type="text" name="email" autocomplete="on" required />
        <div class="form-border"></div>
    
        <label class="login-label" for="user-password" style="padding-top:22px">Password</label>
        <div class="password-container">
            <input id="user-password" class="form-content" type="password" name="password" required />
            <button class="see-pass" type="button" onclick="onView(event)">
                <span id="show-pass" class="material-symbols-outlined">visibility_off</span>
            </button>
        </div>
        <div class="form-border"></div>
    
        <!-- Usando un button per inviare i dati -->

        <% if (message.length > 0) { %>
          <div id="error"><%= message %></div>
        <% } %>
        
        <button id="submit-btn" type="submit">LOGIN</button>
        <a href="/forgot-pass" id="forgot-pass">Password dimenticata?</a>
      </form>
    </div>
  </div>

<script>
  function onView() {
    if (document.getElementById("user-password").type == "password") {
      document.getElementById("user-password").type = "text";
      document.getElementById("show-pass").textContent = "visibility"
    } else {
      document.getElementById("user-password").type = "password";
      document.getElementById("show-pass").textContent = "visibility_off"
    }
  }
</script>